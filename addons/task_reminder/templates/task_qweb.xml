<odoo>
  <data>
    <template id="task_template" name="Task Reminder QWeb Page">
        <t t-call="web.layout">
            <div class="container mt-4">
                <h1>Task Reminder (QWeb)</h1>
                <t t-if="tasks">
                    <ul>
                        <t t-foreach="tasks" t-as="task">
                            <li><t t-esc="task.name"/> - <t t-esc="task.deadline or ''"/></li>
                        </t>
                    </ul>
                </t>
                <t t-else="">
                    <p>No tasks found.</p>
                </t>
            </div>
        </t>
    </template>

    <record id="action_task_reminder_qweb" model="ir.actions.act_url">
        <field name="name">Task Reminder (Web Page)</field>
        <field name="type">ir.actions.act_url</field>
        <field name="url">/task_reminder/tasks</field>
        <field name="target">self</field>
    </record>
  </data>
</odoo>
