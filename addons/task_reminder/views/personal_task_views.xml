<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
        <!-- Tree View -->
        <record id="view_personal_task_list" model="ir.ui.view">
            <field name="name">personal.task.list</field>
            <field name="model">personal.task</field>
            <field name="arch" type="xml">
                <list>
                    <field name="title"/>
                    <field name="due_date"/>
                    <field name="completed"/>
                    <field name="priority"/>
                    <field name="userid"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_personal_task_form" model="ir.ui.view">
            <field name="name">personal.task.form</field>
            <field name="model">personal.task</field>
            <field name="arch" type="xml">
                <form string="Personal Task">
                    <sheet>
                        <group>
                            <field name="title"/>
                            <field name="due_date"/>
                            <field name="completed"/>
                            <field name="priority"/>
                            <field name="userid"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Window Action (you missed this part before) -->
        <record id="action_personal_task" model="ir.actions.act_window">
            <field name="name">Personal Tasks</field>
            <field name="res_model">personal.task</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Submenu for Personal Task -->
        <menuitem id="menu_personal_task"
                  name="Personal Tasks"
                  parent="menu_task_reminder_tasks"
                  action="action_personal_task"/>
  </data>
</odoo>
