<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_task_offer_list" model="ir.ui.view">
        <field name="name">task.offer.list</field>
        <field name="model">task.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="task_id"/>
                <field name="offer_details"/>
                <field name="offered_by"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_task_offer_form" model="ir.ui.view">
        <field name="name">task.offer.form</field>
        <field name="model">task.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="offer_details"/>
                        <field name="offered_by"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_task_offer" model="ir.actions.act_window">
        <field name="name">Task Offers</field>
        <field name="res_model">task.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_task_offer" name="Task Offers" parent="menu_task_reminder_tasks" action="action_task_offer"/>
</odoo>
